            <groupId>AnDE</groupId>
            <artifactId>AnDE</artifactId>
            <scope>system</scope>
            <version>1.0</version>
            <systemPath>${basedir}/lib/AnDE.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>DTNB</groupId>
            <artifactId>DTNB</artifactId>
            <scope>system</scope>
            <version>1.0</version>
            <systemPath>${basedir}/lib/DTNB.jar</systemPath>
