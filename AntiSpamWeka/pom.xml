            <systemPath>${basedir}/lib/SPegasos.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>autoweka</groupId>
            <artifactId>autoweka</artifactId>
            <scope>system</scope>
            <version>1.0</version>
            <systemPath>${basedir}/lib/autoweka.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>bestFirstTree</groupId>
            <artifactId>bestFirstTree</artifactId>
            <scope>system</scope>
            <version>1.0</version>
