            <artifactId>RBFNetwork</artifactId>
            <scope>system</scope>
            <version>1.0</version>
            <systemPath>${basedir}/lib/RBFNetwork.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>SPegasos</groupId>
            <artifactId>SPegasos</artifactId>
            <scope>system</scope>
